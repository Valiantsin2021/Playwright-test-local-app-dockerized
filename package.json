{
  "name": "test-todomvc",
  "version": "1.0.0",
  "description": "Example Playwright tests",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "update": "npm install -D npm-check-updates && npx npm-check-updates -u",
    "prestart": "npm run reset",
    "start": "node ./server",
    "performance": "npx lighthouse http://localhost:3000/ --budget-path=budget.json --output html,csv --output-path=./lighthouse-results.html --preset=desktop --only-categories=performance --max-wait-for-load=6000 --skip-audits --no-enable-error-reporting",
    "measure": "start-test 3000 performance",
    "poststart": "npm run reset",
    "reset": "node reset-db.js",
    "test": "npm run code:check && npm run lint && npx playwright test",
    "lint": "npx eslint ./tests/*.{js,jsx,ts,tsx} --fix",
    "format": "prettier --write .",
    "posttest": "allure generate allure-results -o allure-report --clean",
    "code:check": "tsc --noEmit"
  },
  "precommit": [
    "code:check",
    "format",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Valiantsin2021/Playwright-test-local-app-dockerized"
  },
  "keywords": [],
  "author": "Valentin Lutchanka",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/Valiantsin2021/Playwright-test-local-app-dockerized"
  },
  "homepage": "https://todo-deployment-pipeline.onrender.com",
  "devDependencies": {
    "@playwright/test": "1.36.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "allure-commandline": "^2.21.0",
    "allure-playwright": "^2.1.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-playwright": "0.15.3",
    "eslint-plugin-prettier": "5.0.0",
    "playwright-lighthouse": "^3.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "3.0.0",
    "start-server-and-test": "^2.0.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "json-server": "0.17.1",
    "json-server-reset": "1.4.0",
    "lighthouse": "^10.4.0"
  }
}
